{
    "version": 2,
    "builds": [
        {
            "src": "server/api.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": "server/**"
            }
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "buildCommand": "cd client && npm install && npm run build",
                "distDir": "client/dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/api.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/dist/$1"
        }
    ]
}